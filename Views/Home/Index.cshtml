@model Ogrenci
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<br />
<h2>Yeni Öğrenci Kaydı</h2>


@using (Html.BeginForm())
{
    <div class="form-horizontal">

        <div class="form-group">
            <label class="control-label col-md-3">İsim</label>
            <div class="col-md-9">
                @Html.TextBox("name",null,new {@class = "form-control"})
            </div>

        </div>

        <div class="form-group">
            <label class="control-label col-md-3">Soyisim</label>
            <div class="col-md-9">
                @Html.TextBox("surname",null,new {@class = "form-control"})
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-3">Öğrenci No</label>
            <div class="col-md-9">
                @Html.TextBox("stdNumber",null,new {@class = "form-control"})
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-3 col-sm-9">
                <button type="submit" class="brn brn-primary">Kaydet</button>
            </div>
            <div class="col-sm-3 d-grid">
                <a class="btn btn-outline-primary" href="/Home/List" role="button">Kayıt Listele</a>
            </div>
        </div>
   

    </div>
}












